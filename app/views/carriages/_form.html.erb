<%= form_for [@train, @carriage] do |f| %>
    <%= render 'common/errors', resource: @carriage %>

    <div class="field">
      <%= f.label :type, "Тип" %>
      <%= f.select :type, ["EconomyCarriage","LuxCarriage", "CoupeCarriage", "SittingCarriage"] %>
    </div>

    <div class="filed">
      <%= f.label :top_seats, "Количество верхних мест" %>
      <%= f.text_field :top_seats %>
    </div>

    <div class="filed">
      <%= f.label :bottom_seats, "Количество нижних мест" %>
      <%= f.text_field :bottom_seats %>
    </div>

    <div class="filed">
      <%= f.label :side_top_seats, "Количество нижних боковых мест" %>
      <%= f.text_field :side_top_seats %>
    </div>

    <div class="filed">
      <%= f.label :side_bottom_seats, "Количество верхних боковых мест" %>
      <%= f.text_field :side_bottom_seats %>
    </div>

    <div class="filed">
      <%= f.label :sitting_seats, "Количество сидячих мест" %>
      <%= f.text_field :sitting_seats %>
    </div>

    <div class="field">
      <%= f.label :train, "Текущий поезд" %>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="actions">
      <%= f.submit "#{ @carriage.new_record? ? 'Создать' : 'Изменить ' }"%>
    </div>
<% end %>
