<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>


<p>
Carriages of train:
<br>
<br>
  <% if @train.carriages.present? %>
      <% @train.current_order_carriages.each do |carriage| %>
          <%= link_to "Вагон #{carriage.number}", carriage_path(carriage) %><br>
      <% end %>
  <% else %>
      This train has no carriages.
  <% end %>
</p>

<p>
  <strong>On station:</strong>
  <% if @train.current_station.present? %>
    <%= @train.current_station.title %>
  <% else %>
    Not defined
  <% end %>
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
