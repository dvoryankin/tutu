<h1>Railway Stations</h1>

<%= link_to 'Главная страница', welcome_index_path %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |railway_station| %>
      <tr>
        <td><%= railway_station.title %></td>
        <td><%= link_to t('common.show'), [:admin, railway_station] %></td>
        <td><%= link_to t('common.edit'), edit_admin_railway_station_path(railway_station) %></td>
        <td><%= link_to t('common.destroy'), [:admin, railway_station], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('admin.railway_stations.new.title'), new_admin_railway_station_path %>

