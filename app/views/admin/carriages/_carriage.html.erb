
<% carriages.each do |carriage| %>
  <tr>
    <td><%= "#{carriage.type} - #{carriage.number} - #{carriage.train}" %></td>
    <td><%= link_to carriage.train.number, [:admin, carriage.train] %></td>
    <td><%= link_to 'Показать', admin_carriage_path(carriage) %></td>
    <td><%= link_to 'Изменить', edit_admin_carriage_path(carriage) %></td>
    <td><%= link_to 'Удалить', admin_carriage_path(carriage), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
<% end %>
