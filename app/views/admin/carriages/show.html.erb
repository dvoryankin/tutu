<p id="notice"><%= notice %></p>

<p>
  <strong>Тип:</strong>
  <%= @carriage.type %>
</p>
<p>
  <strong>Номер:</strong>
  <%= @carriage.number %>
</p>

<%= render @carriage.type.to_s.downcase %>

<% if @carriage.train.nil? %>
    <p>Поезд не назначен</p>
<% else %>
    <p>Вагон прикреплён к поезду: <%= @carriage.train.number %></p>
<% end %>

<%= link_to t('common.edit'), edit_admin_carriage_path(@carriage) %> |
<%= link_to t('common.back'), [:admin, @carriage.train] %>






