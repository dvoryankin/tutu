<div class="row">
<div class="col-md-8 col-md-offset-1">
<%= form_for [:admin, ticket] do |f| %>
  <%= render 'common/errors', resource: ticket %>

  <%= f.hidden_field :train_id %>
  <%= f.hidden_field :start_station_id %>
  <%= f.hidden_field :end_station_id %>

  <div class="field form-group">
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :email, {}, class: "form-control"  %>
  </div>

  <div class="field form-group">
    <%= f.label :passenger_name %>
    <%= f.text_field :passenger_name, class: "form-control"  %>
  </div>

  <div class="field form-group">
    <%= f.label :passenger_passport %>
    <%= f.text_field :passenger_passport, class: "form-control"  %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit', action: ticket.new_record? ? t('common.create') : t('common.edit')), class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>
