<h1>Routes</h1>

<%= link_to 'Главная страница', welcome_index_path %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.name %></td>
        <td><%= link_to 'Show', [:admin, route] %></td>
        <td><%= link_to 'Edit', edit_admin_route_path(route) %></td>
        <td><%= link_to 'Delete', [:admin, route], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Route', new_admin_route_path %>
