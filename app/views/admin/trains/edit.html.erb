<div class="row">
<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Editing Train</h1>
  </div>
  <div class="panel-body">
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-8 col-md-offset-1">
          <%= render 'form', train: @train, hidden: false %>
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <ul class="list-unstyled">
        <li>
          <%= link_to t('common.show'), [:admin, @train], class: "text-info" %>
        </li>
        <li>
          <%= link_to t('common.back'), admin_trains_path %>
        </li>
      </ul>
    </div>
  </div>
</div>
</div>
