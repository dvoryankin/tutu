<tr>
  <td>
    <div id="train_number_<%= train.id %>">
      <%= train.number %>
    </div>
    <%= render 'form', train: train, hidden: true %>
  </td>
  <td><%= link_to t('common.show'), [:admin, train], class: "text-info" %></td>
  <td><%= link_to t('common.edit'), '', class: ["text-success", "edit_train"], data: { train_id: train.id } %></td>
  <td><%= link_to t('common.destroy'), [:admin, train], method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %></td>
</tr>
