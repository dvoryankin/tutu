<%= form_for([:admin, @train]) do |f| %>
  <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :order_carriages %>
    <%= f.check_box :order_carriages %>
  </div>

  <div class="field">
    <%= f.label :current_station_id, t('.current_station') %>
    <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :route_id, t('.route') %>
    <%= f.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit', action: train.new_record? ? t('common.create') : t('common.edit')) %>
  </div>
<% end %>
